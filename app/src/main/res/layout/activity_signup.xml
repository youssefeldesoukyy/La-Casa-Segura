<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradback"
    android:padding="20dp"
    tools:context=".SignUp">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="850dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/reg_email"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_below="@id/phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:padding="8dp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/reg_pass"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_below="@id/reg_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@id/first_name"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Phone"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="158dp"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="First name"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="158dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentRight="false"
                android:layout_marginStart="190dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Last name"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/reg_confirm"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_below="@id/reg_pass"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <Button
                android:id="@+id/bt_signup"
                android:layout_width="331dp"
                android:layout_height="62dp"
                android:layout_below="@id/reg_confirm"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/themes"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="16dp"
                app:layout_goneMarginBottom="16dp"
                app:layout_goneMarginRight="16dp"
                tools:ignore="UnknownIdInLayout" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="18dp"
                app:cardBackgroundColor="#A3131313"
                app:cardCornerRadius="35dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="241dp"
                        android:layout_height="156dp"
                        android:layout_centerInParent="true"
                        android:padding="25dp"
                        app:srcCompat="@drawable/lacasa" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>