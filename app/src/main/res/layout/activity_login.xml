<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradback"
    android:padding="20dp"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="627dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="45dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_below="@id/et_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="332dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Email "
                android:inputType="textPersonName"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:text="Forget Password?"
                android:textColor="#004f92"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_password" />

            <Button
                android:id="@+id/bt_signup"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_donthaveanyaccount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/themes"
                android:text="Log In"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/tv_signup"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_below="@id/tv_forgetpassword"
                android:layout_alignRight="@id/tv_donthaveanyaccount"
                android:layout_marginTop="17dp"
                android:layout_marginRight="-91dp"
                android:background="#00FFFFFF"
                android:text="Sign up"
                android:textColor="#004F92"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_donthaveanyaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_forgetpassword"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="31dp"
                android:layout_weight="0"
                android:text="Don't have an account? "
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="556dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#A3131313"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/imageView8"
                        android:layout_width="302dp"
                        android:layout_height="209dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/lacasa" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
