<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradback"
    tools:context=".Motion">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCardG"
                android:layout_width="300dp"
                android:layout_height="226dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                app:cardBackgroundColor="#DCDCDC"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/Gassens"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mq2" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/descriptionGas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgCardG"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="The MQ-2 is a smoke and combustible gas sensor from Winsen. It can detect flammable gas in a range of 300 - 10000ppm. It's most common use is domestic gas leakage alarms and detectors with a high sensitivity to propane and smoke. The sensing material is SNOâ‚‚ for which the conductivity is lower in clean environments and higher when smoke or flammable gas is present. A simple circuit makes measuring this change in conductivity and turning it into data fairly straight-forward, but does require some calibration."
                android:textColor="@color/black"
                android:textSize="17dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="251dp" />

            <TextView
                android:id="@+id/Gtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="Gas Sensors"
                android:textSize="34sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>